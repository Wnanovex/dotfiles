{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "top",
    "layer": "overlay",
    "control-center-layer": "top",
    "layer-shell": true,
    "cssPriority": "user",
    "control-center-margin-top": 10,
    "control-center-margin-bottom": 0,
    "control-center-margin-right": 10,
    "control-center-margin-left": 0,
    "notification-2fa-action": true,
    "notification-inline-replies": true,
    "notification-icon-size": 32,
    "notification-body-image-height": 120,
    "notification-body-image-width": 220,
    "notification-window-width": 400,
    "timeout": 6,
    "timeout-low": 3,
    "timeout-critical": 0,
    "fit-to-screen": false,
    "control-center-width": 450,
    "control-center-height": 820,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 200,
    "hide-on-clear": false,
    "hide-on-action": true,
    "script-fail-notify": true,
    "widgets": [
        "dnd",
        "buttons-grid",
        "mpris",
        "volume",
        "backlight",
        "title",
        "notifications"
    ],
    "widget-config":
    {
        "title":
        {
            "text": "Notifications",
            "clear-all-button": true,
            "button-text": "Clear"
        },
        "dnd":
        {
            "text": "Do Not Disturb"
        },
        "label":
        {
            "max-lines": 2,
            "text": "Notification"
        },
        "mpris":
        {
            "image-size": 52,
            "image-radius": 8
        },
        "volume":
        {
            "label": "",
            "icon-size": 32,
            "show-per-app": true,
            "show-per-app-icon": true
        },
        "backlight":
        {
            "label": "󰃟"
        },
        "buttons-grid":
        {
            "actions":
            [
                /*{
                    "label": "󰤆",
                    "command": "systemctl poweroff"
                },
                {
                    "label": "",
                    "command": "systemctl reboot"
                },
                {
                    "label": "󰍃",
                    "command": "hyprctl dispatch exit"
                },
                {
                    "label": "󰌾",
                    "command": "hyprlock"
                },
                {
                    "label": "",
                    "command": "kitty btop"
                }*/
                {
                    "label": " ",
                    "type": "toggle",
                    "active": true,
                    "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
                    "update-command": "sh -c '[[ $(nmcli r wifi) == \"enabled\" ]] && echo true || echo false'"
                },
                {
                    "label": "󰂯",
                    "type": "toggle",
                    "active": true,
                    "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && rfkill unblock bluetooth || rfkill block bluetooth'",
                    "update-command": "sh -c \"rfkill list bluetooth | grep -q \"Soft blocked: no\" && echo true || echo false\""
                },
                {
                    "label": " ",
                    "type": "toggle",
                    "command": "~/.config/scripts/toggle-mic.sh",
                    "update-command": "pactl get-source-mute @DEFAULT_SOURCE@ | grep -q no && echo false || echo true"
                },
                {
                    "label": " ",
                    "type": "toggle",
                    "command": "~/.config/scripts/toggle-volume.sh",
                    "update-command": "pactl get-sink-mute @DEFAULT_SINK@ | grep -q no && echo false || echo true"
                }
            ]
        }
    }
}
